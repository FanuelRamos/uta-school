{
    "compilerOptions": {
      "target": "es2019",                       
      "module": "commonjs",
      "allowJs": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
  